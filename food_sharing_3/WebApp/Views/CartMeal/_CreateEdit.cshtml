@model BLL.App.DTO.CartMeal

<div class="form-group">
    <label asp-for="CartId" class="control-label"></label>
    <select asp-for="CartId" class ="form-control" asp-items="ViewBag.CartId"></select>
</div>

<input type="radio" id="MealWithOptionsSelected" name="FoodSelection" value="MealWithOptions" checked="">
<label for="MealSelected">Meal</label>
<br>

<div class="form-group">
    <label asp-for="PizzaId" class="control-label"></label>
