<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"> 
    <!--
    dropdown down arrow
    -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApp</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial" />
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <!--
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        -->
                        <!--
                        https://codedocu.com/Details?d=2212&a=9&f=367&l=0
                        -->
                        
                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("admin") || User.IsInRole("user")))
                        {
                            <div class="main_nav_dropdown">
                                <button class="main_nav_dropbtn">
                                    Quiz
                                    <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="main_nav_dropdown-content">
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Choice" asp-action="Index">Choice</a>
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Quiz" asp-action="Index">Quiz</a>
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Question" asp-action="Index">Question</a>
                                    <a class="nav-link text-dark" asp-area="Admin" asp-controller="Result" asp-action="Index">Result</a>
                                </div>
                            </div>

                            <div class="main_nav_dropdown">
                                <button class="main_nav_dropbtn">
                                    QuizAPI
                                    <i class="fa fa-caret-down"></i>
                                </button>
                                <div class="main_nav_dropdown-content">
                                    <a class="nav-link text-dark" href="/api/v1.0/Choice">Choice</a>
                                    <a class="nav-link text-dark" href="/api/v1.0/Question">Question</a>
                                    <a class="nav-link text-dark" href="/api/v1.0/Quiz">Quiz</a>
                                    <a class="nav-link text-dark" href="/api/v1.0/Result">Result</a>
                                </div>
                            </div>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - WebApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
